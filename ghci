-- Add to your ~/.ghci:
-- :script $VIS_DIR/ghci

:def vis \x -> return $ "GHC.Vis.GTK.visualization"

:def eval \x -> return $ "GHC.Vis.GTK.evaluate \"" ++ x ++ "\" >> Control.Concurrent.MVar.putMVar GHC.Vis.GTK.visSignal GHC.Vis.Types.UpdateSignal"
:def update \_ -> return $ "Control.Concurrent.MVar.putMVar GHC.Vis.GTK.visSignal GHC.Vis.Types.UpdateSignal"

:def view \x -> return $ "Control.Concurrent.MVar.putMVar GHC.Vis.GTK.visSignal (GHC.Vis.Types.NewSignal (GHC.HeapView.asBox (" ++ x ++ ")) " ++ (show x) ++ ")"
:def clear \_ -> return $ "Control.Concurrent.MVar.putMVar GHC.Vis.GTK.visSignal GHC.Vis.Types.ClearSignal"
:def switch \_ -> return $ "Control.Concurrent.MVar.putMVar GHC.Vis.GTK.visSignal GHC.Vis.Types.SwitchSignal"
