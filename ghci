-- Add to your ~/.ghci:
-- :script $VIS_DIR/ghci

:def vis \x -> return $ "GHC.Vis.GTK.tvis"
:def view \x -> return $ "Control.Concurrent.MVar.tryPutMVar GHC.Vis.GTK.visGlobalVar (GHC.Vis.GTK.NewSignal (GHC.HeapView.asBox " ++ x ++ ")) >> return ()"
:def eval \x -> return $ "GHC.Vis.GTK.gtkEval \"" ++ x ++ "\" >> Control.Concurrent.MVar.tryPutMVar GHC.Vis.GTK.visGlobalVar GHC.Vis.GTK.UpdateSignal >> return ()"
:def clear \_ -> return $ "Control.Concurrent.MVar.tryPutMVar GHC.Vis.GTK.visGlobalVar GHC.Vis.GTK.ClearSignal >> return ()"
:def update \_ -> return $ "Control.Concurrent.MVar.tryPutMVar GHC.Vis.GTK.visGlobalVar GHC.Vis.GTK.UpdateSignal >> return ()"
